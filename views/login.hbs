<div class="login-form-container">

    <div id="close-login-btn" class="fas fa-times"></div>

    <form action="/user/login" method="post">
        <h3>Giriş Yap</h3>
        <span>Kullanıcı adı</span>
        <input type="email" name="email" class="box" placeholder="E-postanızı giriniz" id="">
        <span>password</span>
        <input type="password" name="password" class="box" placeholder="şifrenizi girin" id="">
        <div class="checkbox">
            <input type="checkbox" name="" id="remember-me">
            <label for="remember-me"> beni Hatırla</label>
        </div>
       <input type="submit" value="Giriş Yap" class="btn">
        <div>
            {{#each error}}
                {{this.msg}}
            {{/each}}
        </div>
        <p>Şifreyi unuttun mu? <a href="#">buraya tıklayın</a></p>
        <p>hesabın yok mu? <a href="kayitol">Kayıt ol</a></p>
    </form>

